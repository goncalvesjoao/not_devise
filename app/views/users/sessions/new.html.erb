<div class="mt-5 row justify-content-md-center">
  <div class="col-12 col-lg-4">
    <form>
      <div class="text-center">
        <img class="mb-4" src="<%= asset_path('bootstrap-logo.svg') %>" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>
      </div>

      <div class="form-floating" style="margin-bottom: -1px">
        <input type="email" class="form-control rounded-0 rounded-top" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control rounded-0 rounded-bottom" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>

      <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">
        <%= t('.submit') %>
      </button>
    </form>
  </div>
</div>
