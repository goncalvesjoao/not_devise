<div class="mt-5 row justify-content-md-center">
  <div class="col-12 col-lg-4">
    <%= simple_form_for(@user_login_form, url: users_sessions_path, method: :post, wrapper: :floating_form) do |f| %>
      <div class="text-center">
        <img class="mb-4" src="<%= asset_path('bootstrap-logo.svg') %>" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>
      </div>

      <%= f.input :username, required: false, placeholder: 'username', input_html: { class: 'rounded-0 rounded-top', style: 'margin-bottom: -1px' } %>
      <%= f.input :password, required: false, placeholder: 'password', input_html: { class: 'rounded-0 rounded-bottom' } %>

      <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">
        <%= t('.submit') %>
      </button>
    <% end %>
  </div>
</div>
